# Environment Variables
# Copy this to .env.local and fill in your values

# Database (Vercel Postgres - auto-injected when connected)
POSTGRES_URL=
POSTGRES_PRISMA_URL=
POSTGRES_URL_NO_SSL=
POSTGRES_URL_NON_POOLING=
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# KV Store (Vercel KV - auto-injected when connected)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Authentication
JWT_SECRET=your-super-secret-key-minimum-32-characters-long

# Push Notifications (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=admin@hiremebahamas.com

# Analytics (auto-injected by Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
