# Environment Variables
# Copy this to .env.local and fill in your values

# Database (Vercel Postgres / Neon - auto-injected when connected to Vercel Storage)
# 
# Connection String Format:
# POSTGRES_URL uses pgbouncer connection pooling for better performance
# Format: postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=true&connect_timeout=15
#
# Example (Neon/Vercel):
# POSTGRES_URL=postgres://default:ENCRYPTED_PASSWORD@ep-xxxxx.us-east-2.aws.neon.tech/verceldb?sslmode=require&pgbouncer=true&connect_timeout=15
POSTGRES_URL=

# For Prisma ORM compatibility (same as POSTGRES_URL)
# POSTGRES_PRISMA_URL=$POSTGRES_URL
POSTGRES_PRISMA_URL=

# Non-pooled connection for database migrations and schema changes
# Uses pgbouncer=false to ensure direct connection for DDL operations
# Format: postgresql://user:password@host:5432/database?sslmode=require&pgbouncer=false
# Note: Vercel auto-injects this as a separate variable. If setting manually, ensure
# it's the same connection string as POSTGRES_URL but with pgbouncer parameter changed to false.
POSTGRES_URL_NON_POOLING=

# Legacy/Optional: Non-SSL connection (not recommended for production)
POSTGRES_URL_NO_SSL=

# Individual connection parameters (auto-injected by Vercel)
POSTGRES_USER=
POSTGRES_HOST=
POSTGRES_PASSWORD=
POSTGRES_DATABASE=

# KV Store (Vercel KV - auto-injected when connected)
KV_URL=
KV_REST_API_URL=
KV_REST_API_TOKEN=
KV_REST_API_READ_ONLY_TOKEN=

# Authentication
JWT_SECRET=your-super-secret-key-minimum-32-characters-long

# Push Notifications (optional)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_EMAIL=admin@hiremebahamas.com

# Analytics (auto-injected by Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=
