# HireBahamas Platform Configuration
# AI Error Prevention and Permanent Settings

# Server Configuration
BACKEND_PORT=8008
FRONTEND_PORT=3000
BACKEND_HOST=127.0.0.1
FRONTEND_HOST=localhost

# Database Configuration
DATABASE_PATH=backend/hirebahamas.db
DATABASE_TYPE=sqlite

# Authentication Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_EXPIRATION_HOURS=24
ADMIN_EMAIL=admin@hirebahamas.com
ADMIN_PASSWORD=AdminPass123!

# AI Error Prevention Settings
HEALTH_CHECK_INTERVAL=30
MAX_RESTART_ATTEMPTS=3
AUTO_RECOVERY_ENABLED=true
MONITORING_ENABLED=true

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=platform_logs.log
ERROR_LOG=platform_errors.log

# Windows Firewall Rules (Auto-configured)
ALLOW_PYTHON_NETWORK=true
ALLOW_NODE_NETWORK=true
ALLOW_PORTS=8008,3000

# Dependency Management
AUTO_INSTALL_DEPENDENCIES=true
UPDATE_DEPENDENCIES=true
PYTHON_PATH=C:/Users/Dell/OneDrive/Desktop/HireBahamas/.venv/Scripts/python.exe

# Performance Settings
BACKEND_WORKERS=1
FRONTEND_HOT_RELOAD=true
DATABASE_POOL_SIZE=5

# Security Settings
HTTPS_ENABLED=false
CSRF_PROTECTION=true
RATE_LIMITING=true

# Backup Settings
AUTO_BACKUP_DATABASE=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=7