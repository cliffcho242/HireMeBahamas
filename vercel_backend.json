{
  "version": 2,
  "name": "hiremebahamas-backend",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "installCommand": "pip install --upgrade pip && pip install -r requirements.txt --only-binary=all",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "final_backend.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
