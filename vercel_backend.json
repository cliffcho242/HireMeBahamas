{
  "version": 2,
  "name": "hiremebahamas-backend",
  "builds": [
    {
      "src": "final_backend.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    }
  ],
  "installCommand": "pip install --upgrade pip && pip install --only-binary=:all: -r requirements.txt",
  "routes": [
    {
      "src": "/(.*)",
      "dest": "final_backend.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production"
  }
}
