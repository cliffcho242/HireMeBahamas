# Advanced AI System Environment Configuration
# 100x Enhanced AI Platform Settings

# ==========================================
# AI SERVICE API KEYS (Configure these!)
# ==========================================

# OpenAI API Key (for GPT-4, GPT-3.5)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key (for Claude-3)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (for Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# Weights & Biases (for ML experiment tracking)
WANDB_API_KEY=your_wandb_api_key_here

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# AI System Settings
AI_MODEL_CACHE_DIR=./ai_models
AI_EMBEDDING_DIM=768
AI_BATCH_SIZE=32
AI_MAX_WORKERS=8

# GPU Settings (set to true if you have CUDA GPU)
AI_ENABLE_GPU=true

# Redis Cache (for production caching)
REDIS_URL=redis://localhost:6379

# Elasticsearch (for advanced search)
ELASTICSEARCH_URL=http://localhost:9200

# MLflow Tracking (for model versioning)
MLFLOW_TRACKING_URI=http://localhost:5000

# ==========================================
# SERVICE PORTS
# ==========================================

# AI API Server Port
AI_API_PORT=8009

# Backend API Port
BACKEND_PORT=8008

# Frontend Development Port
FRONTEND_PORT=3000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# SQLite Database (development)
DATABASE_URL=sqlite:///hirebahamas.db

# PostgreSQL (production - uncomment and configure)
# DATABASE_URL=postgresql://user:password@localhost:5432/hirebahamas

# ==========================================
# SECURITY SETTINGS
# ==========================================

# JWT Secret Key (change this in production!)
JWT_SECRET_KEY=your_super_secret_jwt_key_change_this_in_production

# CORS Origins (for frontend access)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable AI System Monitoring
AI_MONITORING_ENABLED=true

# Health Check Intervals (seconds)
HEALTH_CHECK_INTERVAL=30
AI_HEALTH_CHECK_INTERVAL=60

# ==========================================
# AI MODEL CONFIGURATION
# ==========================================

# NLP Models
SPACY_MODEL=en_core_web_sm
SENTIMENT_MODEL=distilbert-base-uncased-finetuned-sst-2-english

# Embedding Models
EMBEDDING_MODEL=all-MiniLM-L6-v2
JOB_MATCHING_MODEL=msmarco-distilbert-base-v2

# Computer Vision Models
FACE_RECOGNITION_MODEL=cnn  # or hog
OCR_LANG=eng

# ==========================================
# PERFORMANCE TUNING
# ==========================================

# Thread Pool Settings
MAX_WORKERS=8
THREAD_POOL_TIMEOUT=30

# Request Limits
MAX_REQUEST_SIZE=16MB
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# Cache Settings
CACHE_TYPE=redis  # or memory
CACHE_DEFAULT_TIMEOUT=300

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Debug Mode
DEBUG=true
FLASK_DEBUG=true
REACT_APP_DEBUG=true

# Hot Reload
ENABLE_HOT_RELOAD=true

# ==========================================
# PRODUCTION DEPLOYMENT
# ==========================================

# Production Mode (set to true for production)
PRODUCTION=false

# SSL/TLS Settings (for production)
ENABLE_SSL=false
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Load Balancer Health Check
HEALTH_CHECK_PATH=/api/ai/health

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Backup Settings
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# Recovery Settings
AUTO_RECOVERY_ENABLED=true
MAX_RECOVERY_ATTEMPTS=3
RECOVERY_TIMEOUT_SECONDS=300

# ==========================================
# ANALYTICS & METRICS
# ==========================================

# Enable Analytics
ENABLE_ANALYTICS=true

# Metrics Collection
COLLECT_AI_METRICS=true
COLLECT_USER_METRICS=true
COLLECT_SYSTEM_METRICS=true

# Dashboard Settings
METRICS_RETENTION_DAYS=90
ENABLE_REAL_TIME_DASHBOARD=true

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# Email Service (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false
FCM_SERVER_KEY=your_fcm_server_key

# Social Media Integration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# ==========================================
# EXPERIMENTAL FEATURES
# ==========================================

# Enable Beta Features
ENABLE_BETA_FEATURES=false

# A/B Testing
ENABLE_AB_TESTING=false

# Advanced AI Features
ENABLE_ADVANCED_PERSONALIZATION=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_AUTOMATED_CONTENT_GENERATION=true
ENABLE_REAL_TIME_COLLABORATION=false

# ==========================================
# SUPPORT & MAINTENANCE
# ==========================================

# Support Contact
SUPPORT_EMAIL=support@hirebahamas.com
SUPPORT_PHONE=+1-242-XXX-XXXX

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please check back soon."

# Emergency Contacts
EMERGENCY_CONTACT_1=+1-242-XXX-XXXX
EMERGENCY_CONTACT_2=+1-242-XXX-XXXX